# DjangoCRM Environment Configuration
# This file is used by the automated setup system (python manage.py setup_project)
# Copy this file to .env and update the values for your environment

# Django settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
SITE_URL=http://127.0.0.1:8000
MULTI_TENANCY_ENABLED=False

# Environment detection (used by automated setup)
# DJANGO_ENV=development  # Options: development, production, staging
# PRODUCTION=false        # Set to 'true' for production mode
# CI=false               # Set to 'true' in CI/CD environments
# DOCKER_CONTAINER=false # Set to 'true' when running in Docker

# Database
DB_NAME=saascrm_db
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# Alternative database URL format (used by Docker)
# DATABASE_URL=postgresql://your-db-user:your-db-password@localhost:5432/saascrm_db

# OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@example.com